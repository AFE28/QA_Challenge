{
  "printWidth": 80,
  "tabWidth": 2,
  "useTabs": false,
  "semi": true,
  "singleQuote": true,
  "trailingComma": "es5",
  "bracketSpacing": true,
  "jsxSingleQuote": false,
  "arrowParens": "always",
  "proseWrap": "never",
  "htmlWhitespaceSensitivity": "strict",
  "endOfLine": "lf",
  "overrides": [
    {
      "files": ["**/*.js", "**/*.ts"],
      "options": {
        "overrides": [
          {
            "files": ["./tests/**/*", "./pages/**/*"],
            "options": {
              "prettier": true
            }
          }
        ]
      }
    }
  ]
}